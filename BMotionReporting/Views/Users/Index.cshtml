@model BMotionReporting.Models.PagedList<BMotionReporting.Models.UserModels>
@{
    ViewBag.Title = "Data Pengguna BBM";
}
<h1><strong style="font-family:Arial">Daftar Pengguna BBM</strong></h1>
@if (TempData["Error"] != null)
{
    <div class="alert alert-warning" style="margin:10px">
        <p><i class="fa fa-warning"></i> @TempData["Error"].ToString()</p>
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success" style="margin:10px">
        <strong>Success!</strong> @TempData["Success"].ToString()
    </div>
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="row" style="margin:10px">
            <div class="col-lg-12" align="right">
                <a data-toggle="tooltip" title="Pengguna Baru" href="@Url.Action("Create", "Users")" class="btn btn-primary">PENGGUNA BARU</a>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Daftar Pengguna</h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped" id="example1">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("Pengguna")
                            </th>
                            <th>
                                @Html.DisplayName("NIP")
                            </th>
                            <th>
                                @Html.DisplayName("Profesi")
                            </th>
                            <th>
                                @Html.DisplayName("Email")
                            </th>
                            <th>
                                @Html.DisplayName("Contact")
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Content.Count; i++)
            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Content[i].Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Content[i].NIP)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Content[i].Profesi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Content[i].Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Content[i].Telp)
                                </td>
                                <td>
                                    <a href="@Url.Action("Detail", "Users", new { id= Model.Content[i].NIP })"><img src="~/Assets/icon_notifikasi.png" width="20" height="20" /></a>
                                    <button type="button" value="loop" style="border:none" id="btnShow_@Model.Content[i].NIP" onclick="ShowModal(@Model.Content[i].NIP)">
                                        <img src="~/Assets/icon_card.png" width="20" height="20" />
                                    </button>
                                    <div class="modal fade" tabindex="-1" id="modalShow_@Model.Content[i].NIP"
                                         data-keyboard="false" data-backdrop="static">
                                        <div class="modal-dialog modal-lg">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal">×</button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="row" align="center">
                                                        <div class="col-lg-12">
                                                          
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" id="btnHide_@Model.Content[i].NIP" class="btn btn-primary button button4"
                                                            onclick="HideModal(@Model.Content[i].NIP)">
                                                        Tutup
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $('#example1').DataTable({
            "responsive": true,
            "autoWidth": false
        });
    });
    function ShowModal(idx)
    {
        $("#modalShow_" + idx).modal('show');
    }

    function HideModal(idx)
    {
        $("#modalShow_"+idx).modal('hide');
    }
</script>