@model BMotionReporting.Models.UserModels
@{
    ViewBag.Title = "Detail";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-warning" style="margin:10px">
        <p><i class="fa fa-warning"></i> @TempData["Error"].ToString()</p>
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success" style="margin:10px">
        <strong>Success!</strong> @TempData["Success"].ToString()
    </div>
}
@using (Html.BeginForm("Detail", "Users"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="row" style="margin:10px">
                <div class="col-lg-12 col-md-12">

                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="form-horizontal box-body">
                <div class="card card-primary">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-lg-6">
                                <h3 class="card-title">Data Pengguna</h3>
                            </div>
                            <div class="col-lg-6" align="right">
                                @{
                                    if (Model.IsVerify == null)
                                    {
                                        <button name="Submit" type="submit" value="Verify Account" class="btn btn-default"><span style="color:black">Verify Account</span></button>
                                    }
                                }
                               
                                <a href="@Url.Action("Index","Users")" class="btn btn-default"><span style="color:black">Kembali </span></a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="control-label col-md-2">Nama <span style="color:red">*</span></label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @maxlength = 100, @placeholder = "Nama", autocomplete = "off", required = "required", disabled="disabled", value=Model.Name })
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="control-label col-md-2">NIP <span style="color:red">*</span></label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.NIP, new { @class = "form-control", @maxlength = 16, @placeholder = "NIP", autocomplete = "off", required = "required", disabled = "disabled", value = Model.NIP })
                                        @Html.HiddenFor(model => model.NIP)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="control-label col-md-2">Profesi <span style="color:red">*</span></label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.Profesi, new { @class = "form-control", @maxlength = 100, @placeholder = "Profesi", autocomplete = "off", required = "required", disabled = "disabled", value = Model.Profesi })
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="control-label col-md-2">Email <span style="color:red">*</span></label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @maxlength = 50, @placeholder = "Email", autocomplete = "off", required = "required", disabled = "disabled", value = Model.Email })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="control-label col-md-2">No Telp <span style="color:red">*</span></label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.Telp, new { @class = "form-control", @maxlength = 12, @placeholder = "Telp", autocomplete = "off", required = "required", @type = "number", disabled = "disabled", value = Model.Telp })
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="control-label col-md-2">Password <span style="color:red">*</span></label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @maxlength = 50, @placeholder = "***********", autocomplete = "off", required = "required", @type = "password", disabled = "disabled", value = Model.Password })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card card-primary">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-lg-6">
                                <h3 class="card-title">List Dokumen</h3>
                            </div>
                            <div class="col-lg-6" align="right">
                                <a href="@Url.Action("Upload","Document", new { id = Model.NIP})" class="btn btn-default"><span style="color:black">Upload Dokument</span></a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        @Html.Partial("Document", Model.DocumentList)
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script>
    $(function () {
        $('#expDate').datetimepicker({
            format: 'L'
        });
    });
</script>