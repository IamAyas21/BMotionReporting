@model BMotionReporting.Entity.sp_Notification_Result
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "Info"))
{
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="row" style="margin:10px">
                <div class="col-lg-12 col-md-12">

                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="form-horizontal box-body">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Buat Info Blasting</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label class="control-label col-md-2">Judul <span style="color:red">*</span></label>
                                    <div class="col-md-12">
                                        @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @maxlength = 100, autocomplete = "off", required = "required" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">Message <span style="color:red">*</span></label>
                                    <div class="col-md-12">
                                        @Html.TextAreaFor(model => model.Message, new { @class = "form-control", @rows = "4", autocomplete = "off", required = "required" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="@Url.Action("Index","Info")" class="btn btn-default pull-right">Kembali </a>
                        <input id="btnSubmit" name="Submit" type="submit" value="Publikasi" class="btn btn-primary pull-right" />
                    </div>
                </div>

            </div>
        </div>
    </div>
}


