@model BMotionReporting.Models.FuelModels
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Edit", "Fuel"))
{
    @Html.HiddenFor(model => model.FuilId)
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="row" style="margin:10px">
                <div class="col-lg-12 col-md-12">

                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="form-horizontal box-body">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Tambah Baru - Fuel</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="control-label col-md-2">Fuel <span style="color:red">*</span></label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @maxlength = 100, @placeholder = "cnt: Premium", autocomplete = "off", required = "required" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">Price <span style="color:red">*</span></label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.Price, new { @class = "form-control", @maxlength = 16, @placeholder = "cth: 4500", autocomplete = "off", required = "required" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="control-label col-md-2">Type <span style="color:red">*</span></label>
                                    <div class="radio col-md-10">
                                        <div class="row text-center">
                                            <label class="" style="margin-right:1rem;">
                                                @Html.RadioButtonFor(model => model.IsSubsidy, "Y")
                                                Subsidi
                                            </label>
                                            <label class="">
                                                @Html.RadioButtonFor(model => model.IsSubsidy, "N")
                                                @*<input type="radio" name="optionsRadios" id="optionsRadios2" value="N">*@
                                                Non Subsidi
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <a href="@Url.Action("Index","Fuel")" class="btn btn-default pull-right">Kembali </a>
                                <input id="btnSubmit" name="Submit" type="submit" value="Submit" class="btn btn-primary pull-right" />
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
}