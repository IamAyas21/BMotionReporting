@model BMotionReporting.Models.PagedList<BMotionReporting.Entity.sp_OrderAllActivity_Result>
@{
    ViewBag.Title = "Order Monitoring";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="row" style="margin:10px">
            <div class="col-lg-12" align="right">
                
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Order Monitoring</h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped" id="example1">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("No")
                            </th>
                            <th>
                                @Html.DisplayName("NIP")
                            </th>
                            <th>
                                @Html.DisplayName("Nama Pengguna")
                            </th>
                            <th>
                                @Html.DisplayName("BBM")
                            </th>
                            <th>
                                @Html.DisplayName("Liter")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Content.Count; i++)
            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Content[i].Number)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Content[i].NIP)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Content[i].Username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Content[i].FuelName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Content[i].Liter)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $('#example1').DataTable({
            "responsive": true,
            "autoWidth": false
        });
    });
</script>