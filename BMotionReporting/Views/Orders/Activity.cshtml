@model BMotionReporting.Models.PagedList<BMotionReporting.Entity.sp_OrderMonitoring_Result>
@{
    ViewBag.Title = "Order Monitoring";
}
<link href="~/Content/CSS/Users.css" rel="stylesheet" />
<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="row" style="margin:10px">
            <div class="col-lg-12" align="right">
                
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Order Monitoring</h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped" id="example1">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("No")
                            </th>
                            <th>
                                @Html.DisplayName("Tanggal Transaksi")
                            </th>
                            <th>
                                @Html.DisplayName("Nama Pengguna")
                            </th>
                            <th>
                                @Html.DisplayName("Total")
                            </th>
                            <th>
                                @Html.DisplayName("Status")
                            </th>
                            <th>
                                @Html.DisplayName("Fuel")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Content.Count; i++)
            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Content[i].No)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Content[i].CreatedDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Content[i].Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Content[i].Total)
                                </td>
                                <td>
                                    @if (Model.Content[i].Status != "Waiting Confirmation")
                                    {
                                        <span class="label bg-green label-background">
                                            @Html.DisplayFor(modelItem => Model.Content[i].Status)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="label bg-danger label-background">
                                            @Html.DisplayFor(modelItem => Model.Content[i].Status)
                                        </span>
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Content[i].Fuel)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $('#example1').DataTable({
            "responsive": true,
            "autoWidth": false
        });
    });
</script>